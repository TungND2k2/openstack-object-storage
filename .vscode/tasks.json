{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build NestJS Project",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"build"
			],
			"group": "build",
			"problemMatcher": [
				"$tsc"
			],
			"isBackground": false
		},
		{
			"label": "Start Development Server",
			"type": "shell",
			"command": "npm",
			"args": ["run", "start:dev"],
			"group": "build",
			"isBackground": true,
			"problemMatcher": {
				"pattern": [
					{
						"regexp": ".",
						"file": 1,
						"location": 2,
						"message": 3
					}
				],
				"background": {
					"activeOnStart": true,
					"beginsPattern": "Starting compilation in watch mode",
					"endsPattern": "webpack compiled|Found 0 errors"
				}
			}
		},
		{
			"label": "Start MongoDB",
			"type": "shell",
			"command": "docker-compose",
			"args": ["up", "-d", "mongodb"],
			"group": "build",
			"isBackground": false
		},
		{
			"label": "Stop MongoDB", 
			"type": "shell",
			"command": "docker-compose",
			"args": ["down"],
			"group": "build",
			"isBackground": false
		}
	]
}